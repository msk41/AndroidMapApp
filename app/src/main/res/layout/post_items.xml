<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/postItemImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/postImageView"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/postItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postItemImageView"
        android:layout_alignEnd="@+id/postItemImageView"
        android:layout_alignRight="@+id/postItemImageView"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="@string/postItem"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/locaitonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postItemTextView"
        android:layout_alignEnd="@+id/postItemTextView"
        android:layout_alignRight="@+id/postItemTextView"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="@string/location"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize="17sp" />
</RelativeLayout>
